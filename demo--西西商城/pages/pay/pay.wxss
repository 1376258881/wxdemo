page{
  padding-bottom: 90rpx;
}
.user_content {
  display: flex;
  padding: 20rpx;
}

.user_info {
  flex: 5;
}

.user_phone {
  flex: 3;
  text-align: right;
}

.cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid currentColor;
  border-top: 1rpx solid currentColor;
}

.cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom:1rpx solid #ccc; 
}

.cart_chk_warp {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.cart_item .cart_img_warp {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.cart_item .cart_img_warp image{
  width: 80%;
}

.cart_info_warp {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_name{
   display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #666;
}
.goods_price_warp{
  display: flex;
  justify-content: space-between;
}
.goods_price{
    color: var(--themeColor);
    font-size: 34rpx;
}
.cart_num_tool{
  display: flex;
}
.num_edit,.goods_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.goods_num{
  border: none;
}
.footer_tool{
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  display: flex;
}
.all_chk_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.total_price_warp{
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.total_price_text{
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.order_pay_warp{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;

}