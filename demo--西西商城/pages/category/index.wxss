page{
  height: 100%;
}
.cates{
  height: 100%;
}
.cates  .cates_container{
    height: calc(100vh - 90rpx);
    display: flex;
}
.cates  .cates_container .left_menu{
  flex: 2;
}
.cates  .cates_container .right_list{
  flex: 5;
}
.cates  .cates_container .menu_item{
  font-size: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cates  .cates_container  .active{
  color: var(--themeColor);
  border-left:5rpx solid currentColor;  
}
.cates .cates_container .right_list .goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_list .delimiter{
    color: #ccc;
    padding: 0 10rpx;
}
.cates .cates_container .right_list .goods_list{
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_list .goods_list  navigator{
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_list .goods_list  navigator image{
  width:50%;
}