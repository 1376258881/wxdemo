<view class="goods_list">
  <Searchinput></Searchinput>
  <Tabs tabs="{{tabs}}" bindtabsItemchange="handleItemchange">
    <block wx:if="{{tabs[0].isActive}}">
      <view class="frist_tab">
          <navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
             <view class="goods_img_warp">
              <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'http://image1.suning.cn/uimg/b2c/newcatentries/0000000000-000000000601395527_1_400x400.jpg'}}"></image> 
             </view>
             <view class="good_info_warp">
                <view class="goods_name">{{item.goods_name}}</view>
                <view class="goods_price">￥{{item.goods_price}}</view>
             </view>
          </navigator>                      
      </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">
      <view class="frist_tab">
            <navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
              <view class="goods_img_warp">
                <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'http://image1.suning.cn/uimg/b2c/newcatentries/0000000000-000000000601395527_1_400x400.jpg'}}"></image> 
              </view>
              <view class="good_info_warp">
                  <view class="goods_name">{{item.goods_name}}</view>
                  <view class="goods_price">￥{{item.goods_price}}</view>
              </view>
            </navigator>                      
        </view>
      </block>
    <block wx:elif="{{tabs[2].isActive}}"><view class="frist_tab">
          <navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
             <view class="goods_img_warp">
              <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'http://image1.suning.cn/uimg/b2c/newcatentries/0000000000-000000000601395527_1_400x400.jpg'}}"></image> 
             </view>
             <view class="good_info_warp">
                <view class="goods_name">{{item.goods_name}}</view>
                <view class="goods_price">￥{{item.goods_price}}</view>
             </view>
          </navigator>                      
      </view></block>
  </Tabs>
</view>