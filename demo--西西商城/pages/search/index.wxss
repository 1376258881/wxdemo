/* pages/search/index.wxss */
page{
  padding: 20rpx;
  background-color: #dedede;
}
.search_row{
  display: flex;
  height: 60rpx;
}

 input{
  flex: 1;
  background-color: #fff;
  height: 100%;
  padding-left: 30rpx;
}
 button{
  width: 110rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
}
.search_contnet{
  margin-top: 30rpx;
}
.search_item{
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}