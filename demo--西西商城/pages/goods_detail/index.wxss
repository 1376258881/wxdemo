/* pages/goods_detail/index.wxss */
page{
  padding-bottom: 90rpx;
}
.detail_swiper  swiper{
    text-align: center;
    height: 65vw;
}
.detail_swiper  swiper image{
  width: 60%;
}
.goods_price{
  font-size: 32rpx;
  padding: 15rpx;
  font-weight: 600;
  color:var(--themeColor);
}
.goods_name_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
}
.goods_name{
  flex: 5;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp:2;
}
.goods_collect{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1rpx solid black;
}
.shoucang{
  width: 50rpx;
}
.icon-shoucang1{
  color: var(--themeColor);
}
.goods_info_title{
  font-weight: 600;
  color:var(--themeColor);
  font-size:32rpx;
  padding: 20rpx;
}
.goods_bttom{
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  border-top:1rpx solid #ccc;
}
.tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn-buy,.btn-cart{
  flex: 2; 
}
.btn-buy{
 background: #eb4450;
  font-weight: 600;
  font-size: 32rpx;
  color: #ffffff;
}  
.btn-cart{
  background: #ffa500;
  font-weight: 600;
  font-size: 32rpx;
  color: #ffffff;
}