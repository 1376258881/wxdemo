/* pages/collect/index.wxss */
page{
 
}
.collect_title{
    padding:40rpx 0;
     background-color: #f3f4f6;
}
.collect_tips{
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin: 25rpx;
  background-color: #fff;
}
.active{
  color: var(--themeColor);
  border-color:  currentColor;
}

.goods_item{
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.goods_img_warp{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.goods_img_warp image{
  width: 70%;
}
.good_info_warp{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.goods_price{
  color: var(--themeColor);
  font-size: 32rpx;
}